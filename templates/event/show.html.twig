{% extends 'base.html.twig' %}

{% block title %}Détail d'un évènement{% endblock %}

{% block body %}

    <div class="container " id="detail-event" style="background-color: orange">
        <div class="row row-cols-lg-2 row-cols-sm-1 fs-5" style="justify-content: space-around" >
            <div class="col ">
                <ul class=" list-group list-group-flush" id="detail-list"  style="background-color: aquamarine;">
                    <li class="name-event list-group-item" style="list-style-type: none; background-color: aquamarine "><b>Nom de la sortie :</b>   {{ event.name }}</li>
                    <li class="date-hours-event list-group-item" style="list-style-type: none">Date et heure de la sortie : {{ event.startAt |date('d/m/Y')}}</li>
                    <li class="date-limit-inscription list-group-item" style="list-style-type: none"> Date limite d'inscription :{{ event.registrationEndsAt |date('d/m/Y')}}</li>
                    <li class="nbr-place list-group-item" style="list-style-type: none">Nombre de places : {{ event.maxUsers }}</li>
                    <li class="duration list-group-item" style="list-style-type: none">Durée: {{ event.duration }}</li>
                    <li class="description list-group-item" style="list-style-type: none">Description et info : {{ event.description }}</li>
                    {% if event.host.username is defined and event.host.username is not empty %}
                        <li class="host list-group-item" style="list-style-type: none">Organisateur : {{ event.host.username }}</li>
                    {% endif %}
                    <li class="City list-group-item" style="list-style-type: none">Ville organisatrice : {{ location.name }}</li>
                    <li class="place list-group-item" style="list-style-type: none">Lieu : {{ location.name }}</li>
                    <li class="street list-group-item" style="list-style-type: none">Rue : {{ location.street }}</li>
                    <li class="latitude list-group-item" style="list-style-type: none">Latitude : {{ location.latitude }}</li>
                    <li class="longitude list-group-item" style="list-style-type: none">Longitude : {{ location.longitude }}</li>
                </ul>
            </div>
            <div class="col" id="map" style="background-color: pink" >
                    {{ ux_map(map, { style: 'height: 300px' }) }}

            </div>
        </div>

    </div>

{% endblock %}