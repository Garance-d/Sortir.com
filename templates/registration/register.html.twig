{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="register-container">
        <h1>Inscription</h1>

        {% if registrationForm.vars.errors|length > 0 %}
            <div class="alert">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm) }}

        <div class="form-group">
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword.first, { label: 'Mot de passe' }) }}
            {{ form_row(registrationForm.plainPassword.second, { label: 'Confirmez le mot de passe' }) }}
            {{ form_row(registrationForm.telephone) }}
            {{ form_row(registrationForm.campus) }}
        </div>

        <div class="form-actions">
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit">Valider</button>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
